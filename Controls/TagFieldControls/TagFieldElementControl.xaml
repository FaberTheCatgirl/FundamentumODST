<UserControl x:Class="PresentationODST.Controls.TagFieldControls.TagFieldElementControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PresentationODST.Controls"
             mc:Ignorable="d" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/> <!-- For hints -->
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="HintTextBlock" Grid.Column="0" Text="?" Background="{x:Null}" Foreground="#FF4D9AE8" TextAlignment="Center" Visibility="Hidden">
            <TextBlock.ToolTip>
                <ToolTip>

                </ToolTip>
            </TextBlock.ToolTip>
        </TextBlock>
        <TextBlock x:Name="NameTextBlock" Grid.Column="1" Text="Test" Background="{x:Null}"/>
        <TextBox x:Name="ValueTextBox" Grid.Column="2" BorderBrush="Black" Text="" IsReadOnly="False" Background="#FFE0E0E0" TextChanged="ValueTextBox_TextChanged"/>
        <TextBlock x:Name="TypeTextBlock" Grid.Column="3" Background="{x:Null}"/>
    </Grid>
</UserControl>
